<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="background_main"
    android:background="@color/background_dark">

    <!-- Gradient Background Circle -->
    <View
        android:tag="circle_gradient"
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="50dp"
        android:alpha="0.8"
        android:background="@drawable/gradient_circle_extended" />


    <!-- User Profile Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="280dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/matrixtype_display"
            android:tag="dynamic_text"
            android:text="Loading..."
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dormitory_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/matrixtype_display"
            android:tag="dynamic_text"
            android:text="Loading..."
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Store Controls Section -->
    <LinearLayout
        android:id="@+id/shop_controls_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/modal_background"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp">

        <!-- Energy Points and Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/energy_points_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pill_background"
                android:fontFamily="@font/matrixtype_display"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:tag="dynamic_text"
                android:text="400 Energy"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:fontFamily="@font/matrixtype_display"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:tag="dynamic_text"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab_pallets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:fontFamily="@font/matrixtype_display"
                android:gravity="center"
                android:padding="12dp"
                android:tag="dynamic_text"
                android:text="Palettes"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tab_owned"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:fontFamily="@font/matrixtype_display"
                android:gravity="center"
                android:padding="12dp"
                android:tag="dynamic_text"
                android:text="Owned"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Shop Items Section (Horizontal Scrolling) -->
    <LinearLayout
        android:id="@+id/shop_items_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_controls_section"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/modal_background"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Pallets Tab Content -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pallets_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:visibility="visible" />

        <!-- Owned Tab Content -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/owned_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="32dp"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
