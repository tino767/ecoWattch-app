<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="background_main"
    android:background="@color/background_dark">

    <!-- Gradient Background Circle -->
    <View
        android:tag="circle_gradient"
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-150dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/gradient_circle_extended"
        tools:rotation="180" />

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <!-- This Week Section -->
            <LinearLayout
                android:id="@+id/this_week_section"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="48dp"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Header with Title and Back Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:tag="dynamic_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/matrixtype_display"
                        android:text="This Week"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:tag="dynamic_text"
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background"
                        android:fontFamily="@font/matrixtype_display"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:text="Back"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Selected Day Energy Usage Label -->
                <TextView
                    android:tag="dynamic_text"
                    android:id="@+id/selected_day_energy_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/matrixtype_display"
                    android:text="Wednesday: 2650 kWh"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <!-- Bar Chart Container with integrated day labels -->
                <LinearLayout
                    android:id="@+id/bar_chart_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp"
                    android:paddingBottom="8dp">

                    <!-- Bars with day labels will be added programmatically -->

                </LinearLayout>

            </LinearLayout>

            <!-- Leaderboard All-Time Section -->
            <LinearLayout
                android:id="@+id/leaderboard_section"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/modal_background"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="20dp">

                <TextView
                    android:tag="dynamic_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/matrixtype_display"
                    android:text="Leaderboard\nAll-Time"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Top 3 Podium with varying heights -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <!-- 2nd Place (Allen) - Medium height -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:tag="dynamic_text"
                            android:id="@+id/second_place_dorm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/matrixtype_display"
                            android:text="Allen"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:tag="dynamic_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/matrixtype_display"
                            android:text="2nd"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 1st Place (Tinsley) - Tallest -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:tag="dynamic_text"
                            android:id="@+id/first_place_dorm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/matrixtype_display"
                            android:text="Tinsley"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:tag="dynamic_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/matrixtype_display"
                            android:text="1st"
                            android:textColor="@color/white"
                            android:textSize="26sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 3rd Place (Sechrist) - Shortest -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:tag="dynamic_text"
                            android:id="@+id/third_place_dorm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/matrixtype_display"
                            android:text="Sechrist"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:tag="dynamic_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/matrixtype_display"
                            android:text="3rd"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- All-Time Rankings List Container (Darker background) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/list_container_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- All-Time Rankings List (Scrollable) -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:scrollbars="vertical">

                        <LinearLayout
                            android:id="@+id/all_time_rankings_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Rankings will be populated programmatically -->

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

            <!-- User Streaks Leaderboard Section -->
            <LinearLayout
                android:id="@+id/streaks_section"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/modal_background"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="20dp">

                <TextView
                    android:tag="dynamic_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/matrixtype_display"
                    android:text="User Streaks"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Streaks Rankings List Container (Darker background) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/list_container_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Streaks Rankings List (Scrollable) -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:scrollbars="vertical">

                        <LinearLayout
                            android:id="@+id/streaks_rankings_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Streaks will be populated programmatically -->

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

</RelativeLayout>
