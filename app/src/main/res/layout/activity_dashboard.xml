<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="background_main"
    android:background="@color/background_dark">

    <!-- Gradient Background Circle -->
    <View
        android:tag="circle_gradient"
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-150dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/gradient_circle_extended"
        tools:rotation="180" />

    <!-- Main Content Area -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dash_content_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Energy Meter (Right Side) -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav_container"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="80dp">

        <!-- Meter Background -->
        <View
            android:id="@+id/meter_background"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@drawable/meter_background" />

        <!-- Meter Fill (Dynamic) -->
        <View
            android:id="@+id/meter_fill"
            android:layout_width="12dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/meter_fill_shape" />

        <!-- Threshold Triangle -->
        <ImageView
            android:id="@+id/threshold_indicator"
            android:tag="primary_color"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/meter_background"
            android:rotation="90"
            android:src="@android:drawable/arrow_down_float"
            app:tint="@color/white" />

    </RelativeLayout>

    <!-- Bottom Navigation Buttons -->
    <LinearLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Records Button -->
        <LinearLayout
            android:id="@+id/records_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/main_button_background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="26dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:tag="primary_color"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="@color/white" />

                <TextView
                    android:tag="primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/matrixtype_display"
                    android:text="Records"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:tag="primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pill_background"
                android:fontFamily="@font/matrixtype_display"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Coming Soon"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Shop Button -->
        <LinearLayout
            android:id="@+id/shop_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/main_button_background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="26dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:tag="primary_color"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    app:tint="@color/white" />

                <TextView
                    android:tag="primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/matrixtype_display"
                    android:text="Shop"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

                <TextView
                    android:tag="primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pill_background"
                    android:fontFamily="@font/matrixtype_display"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="Energy Shop"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Modal Overlay (initially hidden) -->
    <LinearLayout
        android:id="@+id/modal_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black"
        android:visibility="gone"
        android:orientation="vertical">

        <!-- Modal Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/tab_alerts"
                android:tag="accent_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background"
                android:src="@android:drawable/ic_dialog_alert"
                app:tint="@color/text_red"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/tab_notifications"
                android:tag="primary_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background"
                android:src="@android:drawable/ic_popup_reminder"
                app:tint="@color/white"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/tab_settings"
                android:tag="primary_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background"
                android:src="@android:drawable/ic_menu_preferences"
                app:tint="@color/white"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/tab_profile"
                android:tag="primary_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="@color/white"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Modal Content Container -->
        <LinearLayout
            android:id="@+id/modal_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/modal_background"
            android:padding="24dp"
            android:orientation="vertical">

            <!-- Daily Tips Tab Content (formerly Alerts) -->
            <LinearLayout
                android:id="@+id/tab_content_alerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:tag="accent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="DAILY TIPS"
                    android:textColor="@color/text_red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/matrixtype_display" />

                <TextView
                    android:id="@+id/daily_tip_text"
                    android:tag="primary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading tip..."
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:fontFamily="@font/matrixtype_display" />

            </LinearLayout>

            <!-- Notifications Tab Content -->
            <LinearLayout
                android:id="@+id/tab_content_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:tag="accent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="NOTIFICATIONS"
                    android:textColor="@color/text_red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/matrixtype_display" />

            </LinearLayout>

            <!-- Daily Check-in Tab Content (formerly Settings) -->
            <LinearLayout
                android:id="@+id/tab_content_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:tag="accent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="DAILY CHECK-IN"
                    android:textColor="@color/text_red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/matrixtype_display" />

                <!-- checklist item 1 -->
                <LinearLayout
                    android:id="@+id/checklist_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/pill_background"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/checklist_item_1_icon"
                        android:tag="accent_color"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_checkbox_unchecked"
                        android:padding="8dp"
                        android:contentDescription="checklist item 1"
                        android:elevation="10dp" />

                    <TextView
                        android:id="@+id/checklist_item_1_text"
                        android:tag="primary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/matrixtype_display"
                        android:gravity="center_vertical"
                        android:text="Log in to ecoWattch app"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- checklist item 2 -->
                <LinearLayout
                    android:id="@+id/checklist_item_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/pill_background"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/checklist_item_2_icon"
                        android:tag="accent_color"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_checkbox_unchecked"
                        android:padding="8dp"
                        android:contentDescription="checklist item 2"
                        android:elevation="10dp" />

                    <TextView
                        android:id="@+id/checklist_item_2_text"
                        android:tag="primary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/matrixtype_display"
                        android:gravity="center_vertical"
                        android:text="Turn off lights in your room"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- checklist item 3 -->
                <LinearLayout
                    android:id="@+id/checklist_item_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/pill_background"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/checklist_item_3_icon"
                        android:tag="accent_color"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_checkbox_unchecked"
                        android:padding="8dp"
                        android:contentDescription="checklist item 3"
                        android:elevation="10dp" />

                    <TextView
                        android:id="@+id/checklist_item_3_text"
                        android:tag="primary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/matrixtype_display"
                        android:gravity="center_vertical"
                        android:text="Unplug unused electronics"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tasks_completed"
                    android:tag="accent_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/matrixtype_display"
                    android:text="All tasks completed! You've earned your daily points."
                    android:textColor="@color/text_red"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Profile Tab Content -->
            <LinearLayout
                android:id="@+id/tab_content_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:tag="accent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="PROFILE"
                    android:textColor="@color/text_red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/matrixtype_display" />

                <!-- Username Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:tag="secondary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/matrixtype_display"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/profile_username"
                        android:tag="primary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guest"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/matrixtype_display" />

                </LinearLayout>

                <!-- Dorm Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:tag="secondary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dormitory"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/matrixtype_display"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/profile_dorm"
                        android:tag="primary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Not Selected"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/matrixtype_display" />

                </LinearLayout>

                <!-- Logout Button -->
                <TextView
                    android:id="@+id/profile_logout_button"
                    android:tag="primary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="@color/white"
                    android:background="@drawable/main_button_background"
                    android:fontFamily="@font/matrixtype_display"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingVertical="12dp"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Hamburger Menu Button (Top Right) - Placed last to appear above modal -->
    <ImageView
        android:id="@+id/hamburger_button"
        android:tag="accent_color"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:src="@drawable/ic_hamburger"
        app:tint="@color/text_red"
        android:padding="12dp"
        android:contentDescription="Menu"
        android:elevation="10dp" />

</RelativeLayout>
