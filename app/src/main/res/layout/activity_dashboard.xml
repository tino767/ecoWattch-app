<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="background_main"
    android:background="@color/background_dark">

    <!-- Gradient Background Circle -->
    <View
        android:tag="circle_gradient"
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-150dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/gradient_circle_extended"
        tools:rotation="180" />

    <!-- Logout Button (Top Right) -->
    <ImageView
        android:id="@+id/logout_button"
        android:tag="accent_color"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:src="@android:drawable/ic_lock_power_off"
        app:tint="@color/text_red"
        android:padding="12dp"
        android:contentDescription="Logout" />

    <!-- Main Content Area -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dash_content_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Energy Meter (Right Side) -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav_container"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="80dp">

        <!-- Meter Background -->
        <View
            android:id="@+id/meter_background"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@drawable/meter_background" />

        <!-- Meter Fill (Dynamic) -->
        <View
            android:id="@+id/meter_fill"
            android:layout_width="12dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/meter_fill_shape" />

        <!-- Threshold Triangle -->
        <ImageView
            android:id="@+id/threshold_indicator"
            android:tag="primary_color"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/meter_background"
            android:rotation="90"
            android:src="@android:drawable/arrow_down_float"
            app:tint="@color/white" />

    </RelativeLayout>

    <!-- Bottom Navigation Buttons -->
    <LinearLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Records Button -->
        <LinearLayout
            android:id="@+id/records_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/main_button_background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="26dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:tag="primary_color"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="@color/white" />

                <TextView
                    android:tag="primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/matrixtype_display"
                    android:text="Records"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:tag="primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pill_background"
                android:fontFamily="@font/matrixtype_display"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Coming Soon"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Shop Button -->
        <LinearLayout
            android:id="@+id/shop_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/main_button_background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="26dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:tag="primary_color"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    app:tint="@color/white" />

                <TextView
                    android:tag="primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/matrixtype_display"
                    android:text="Shop"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

                <TextView
                    android:tag="primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pill_background"
                    android:fontFamily="@font/matrixtype_display"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="Energy Shop"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Modal Overlay (initially hidden) -->
    <LinearLayout
        android:id="@+id/modal_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black"
        android:visibility="gone"
        android:orientation="vertical">

        <!-- Modal Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/tab_alerts"
                android:tag="accent_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background"
                android:src="@android:drawable/ic_dialog_alert"
                app:tint="@color/text_red"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/tab_notifications"
                android:tag="primary_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background"
                android:src="@android:drawable/ic_popup_reminder"
                app:tint="@color/white"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/tab_settings"
                android:tag="primary_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background"
                android:src="@android:drawable/ic_menu_preferences"
                app:tint="@color/white"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/tab_profile"
                android:tag="primary_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:src="@android:drawable/ic_menu_preferences"
                app:tint="@color/white"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Modal Content Container -->
        <LinearLayout
            android:id="@+id/modal_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/modal_background"
            android:padding="24dp"
            android:orientation="vertical">

            <!-- Alerts Tab Content -->
            <LinearLayout
                android:id="@+id/tab_content_alerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:tag="accent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ALERTS"
                    android:textColor="@color/text_red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/matrixtype_display" />

                <TextView
                    android:tag="primary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/matrixtype_display" />

            </LinearLayout>

            <!-- Notifications Tab Content -->
            <LinearLayout
                android:id="@+id/tab_content_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:tag="accent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="NOTIFICATIONS"
                    android:textColor="@color/text_red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/matrixtype_display" />

                <TextView
                    android:tag="primary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You have 3 new notifications. Check your energy usage alerts and leaderboard updates."
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/matrixtype_display" />

            </LinearLayout>

            <!-- Settings Tab Content -->
            <LinearLayout
                android:id="@+id/tab_content_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:tag="accent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="SETTINGS"
                    android:textColor="@color/text_red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/matrixtype_display" />

                <TextView
                    android:tag="primary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configure your energy monitoring preferences and app settings."
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/matrixtype_display" />

            </LinearLayout>

            <!-- Profile Tab Content -->
            <LinearLayout
                android:id="@+id/tab_content_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:tag="accent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="PROFILE"
                    android:textColor="@color/text_red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/matrixtype_display" />

                <TextView
                    android:tag="primary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View and edit your profile information and energy goals."
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/matrixtype_display" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
